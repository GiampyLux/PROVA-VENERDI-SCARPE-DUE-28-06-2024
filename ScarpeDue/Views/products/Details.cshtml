
@model ScarpeDue.Models.Product 

@{
    ViewData["Title"] = "Dettagli Prodotto";
}

<h1>@Model.Name</h1>

<div class="product-details">
    <img src="@Model.CoverImageUrl" alt="@Model.Name" class="product-cover" />
    <p>Prezzo: @Model.Price.ToString("C")</p>
    <p>@Model.Description</p>
    <h2>Immagini aggiuntive</h2>
    <img src="@Model.AdditionalImage1Url" alt="Immagine aggiuntiva 1" class="additional-image" />
    <img src="@Model.AdditionalImage2Url" alt="Immagine aggiuntiva 2" class="additional-image" />
</div>

<style>
    .product-details {
        max-width: 600px;
        margin: auto;
        text-align: center;
    }

    .product-cover {
        max-width: 100%;
        height: auto;
    }

    .additional-image {
        max-width: 45%;
        height: auto;
        margin: 10px;
    }
</style>
